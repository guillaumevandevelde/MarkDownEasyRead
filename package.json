{
  "name": "markdown-easy-read",
  "displayName": "Markdown Easy Read",
  "description": "Reader-optimized markdown preview with zoom controls and responsive layout",
  "version": "1.1.0",
  "publisher": "vdvguillaume",
  "icon": "icon.png",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "markdown",
    "preview",
    "reader",
    "zoom",
    "typography"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/vdvguillaume/MarkDownEasyRead.git"
  },
  "bugs": {
    "url": "https://github.com/vdvguillaume/MarkDownEasyRead/issues"
  },
  "license": "MIT",
  "activationEvents": [
    "onCommand:markdownEasyRead.openPreview",
    "onLanguage:markdown"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "markdownEasyRead.openPreview",
        "title": "Open Markdown Easy Read"
      },
      {
        "command": "markdownEasyRead.zoomIn",
        "title": "Markdown Easy Read: Zoom In"
      },
      {
        "command": "markdownEasyRead.zoomOut",
        "title": "Markdown Easy Read: Zoom Out"
      },
      {
        "command": "markdownEasyRead.resetZoom",
        "title": "Markdown Easy Read: Reset Zoom"
      },
      {
        "command": "markdownEasyRead.showEasyReadPreview",
        "title": "Show Easy Read Preview"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "markdownEasyRead.showEasyReadPreview",
          "when": "editorLangId == markdown"
        }
      ]
    },
    "keybindings": [
      {
        "command": "markdownEasyRead.zoomIn",
        "key": "ctrl+=",
        "mac": "cmd+=",
        "when": "activeWebviewPanelId == 'markdownEasyRead.preview'"
      },
      {
        "command": "markdownEasyRead.zoomOut",
        "key": "ctrl+-",
        "mac": "cmd+-",
        "when": "activeWebviewPanelId == 'markdownEasyRead.preview'"
      },
      {
        "command": "markdownEasyRead.resetZoom",
        "key": "ctrl+0",
        "mac": "cmd+0",
        "when": "activeWebviewPanelId == 'markdownEasyRead.preview'"
      }
    ],
    "customEditors": [
      {
        "viewType": "markdownEasyRead.preview",
        "displayName": "Markdown Easy Read",
        "selector": [
          {
            "filenamePattern": "*.md"
          }
        ],
        "priority": "option"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/glob": "^9.0.0",
    "@types/markdown-it": "^13.0.7",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.x",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vscode/test-electron": "^2.3.8",
    "esbuild": "^0.19.11",
    "eslint": "^8.56.0",
    "glob": "^11.0.3",
    "mocha": "^10.2.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@types/highlight.js": "^9.12.4",
    "highlight.js": "^11.11.1",
    "markdown-it": "^14.0.0"
  }
}
